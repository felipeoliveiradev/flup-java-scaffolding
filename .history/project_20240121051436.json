    "package": "com.task.manager"
  },
  "modules": [
    {
      "name": {
        "singular": "category",
        "plural": "categories"
      },
      "request": {
        "field": "columnName"
      },
      "response": {
        "default": true
      },
      "data": {
        "id": {
          "type": "String",
          "columnName": "id",
          "request": {
            "required": false,
            "exist": true
          }
        },
        "post": {
          "type": "String",
          "columnName": "post",
          "validations": {
            "types": ["empty", "null", "max:30", "min:3", "document:cpf&cnpj"],
            "new": {
              "name": "document",
              "params": [
                {
                  "name": "cpf&cnpj",
                  "message": "Please fill with cpf/cnpj valid",
                  "regex": "^([0-9]{2}[\\.]?[0-9]{3}[\\.]?[0-9]{3}[/]?[0-9]{4}[-]?[0-9]{2})|([0-9]{3}[\\.]?[0-9]{3}[\\.]?[0-9]{3}[-]?[0-9]{2})"
                },
                {
                  "name": "cnpj",
                  "message": "Please fill with cnpj valid",
                  "rule": ""
                },
                {
                  "name": "cpf",
                  "message": "Please fill with cnpj valid",
                  "rule": "/^\\d{2}\\.\\d{3}\\.\\d{3}/\\d{4}\\-\\d{2}$/"
                }
              ],
              "rule": "",
              "message": "",
              "global": true
            }
          }
        },
        "image": {
          "type": "String",
          "columnName": "image_url",
          "request": {
            "field": false
          },
          "validations": {
            "types": ["empty", "null", "url"],
            "new": {
              "name": "url",
              "rule": "[(http(s)?)://(www\\.)?a-zA-Z0-9@:%._\\+~#=]{2,256}\\.[a-z]{2,6}\b([-a-zA-Z0-9@:%_\\+.~#?&//=]*)",
              "message": "",
              "global": false
            }
          }
        },
        "userId": {
          "type": "String",
          "columnName": "user_id",
          "response": {
            "exist": false
          }
        },
        "createdAt": {
          "type": "Instant",
          "columnName": "created_at"
        },
        "updatedAt": {
          "type": "Instant",
          "columnName": "updated_at"
        },
        "deletedAt": {
          "type": "Instant",
          "columnName": "deleted_at"
        }
      },
      "rest": {
        "methods": [
          {
            "method": "POST",
            "permission": ["all"]
          },
          {
            "method": "DELETE",
            "permission": ["all"]
          },
          {
            "method": "UPDATE",
            "permission": ["all"]
          },
          {
            "method": "LIST",
            "permission": ["all"]
          },
          {
            "method": "GET_BY_ID",
            "permission": ["all"]
          }
        ],
        "path": "/posts"
      },
      "dataBank": ["MYSQL"]
    }
  ]
